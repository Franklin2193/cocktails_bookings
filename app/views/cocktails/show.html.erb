<div class="container" style="margin-top: 100px">
    <div class="card">
        <div class="card-body">
            <h3 class="card-title"><%= @cocktail.name %></h3>
            <div class="row">
                <div class="col-lg-5 col-md-5 col-sm-6">
                    <div class="white-box text-center">
                      <%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
                    </div>
                </div>
                <div class="col-lg-7 col-md-7 col-sm-6">
                    <h4 class="box-title mt-5">Cocktail Description</h4>
                    <p><%= @cocktail.description%></p>
                    <h2 class="mt-5">
                        $<%= @cocktail.price%>
                    </h2>
                    <button class="btn btn-primary btn-rounded"><%= link_to "Book this #{@cocktail.name}", new_cocktail_booking_path(@cocktail) %></button>
                </div>
        </div>
    </div>
</div>
